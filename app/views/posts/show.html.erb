<% if @post.template == 'balloon' %>

  <%= content_for :js do %>
    <%= javascript_include_tag 'app', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'new_ckeditor/balloon/ckeditor', 'data-turbolinks-track': 'reload' %>
  <% end %>

  <p id="notice"><%= notice %></p>

  <h1 style='color: red'>Post Viewer & Editor - <%= link_to 'VIEW FINAL PAGE', public_page_post_path(@post) %></h1>
  <small>(click in editor to start editing)</small>

  <hr>

  <p>
    <%= ckeditor_tag :contentxxxx, @post.content, editor: { template: :balloon, type: :balloon, js: "sendData('#{update_inline_post_path(@post)}', editorHiddenField.value)" } %>
  </p>

<% elsif @post.template == 'inline' %>

  <%= content_for :js do %>
    <%= javascript_include_tag 'app', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'new_ckeditor/inline/ckeditor', 'data-turbolinks-track': 'reload' %>
  <% end %>

  <p id="notice"><%= notice %></p>

  <h1 style='color: red'>Post Viewer & Editor - <%= link_to 'VIEW FINAL PAGE', public_page_post_path(@post) %></h1>
  <small>(click in editor to start editing)</small>

  <hr>

  <p>
    <%= ckeditor_tag :contentxxxx, @post.content, editor: { template: :inline, type: :inline, js: "sendData('#{update_inline_post_path(@post)}', editorHiddenField.value)" } %>
  </p>


<% else %>
  <h1>Content from the editor (<%= @post.template %>)</h1>

  <hr/>

  <div class="ck-content">
    <%= raw @post.content %>
  </div>

<% end %>


<% if @post.template == 'classic' %>
  <%= link_to 'Edit', edit_post_path(@post) %> |
<% end %>
<%= link_to 'Back', posts_path %>

